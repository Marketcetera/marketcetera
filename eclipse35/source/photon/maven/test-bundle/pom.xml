<project
 xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.marketcetera</groupId>
    <artifactId>photon-maven</artifactId>
    <version>1.5.0</version>
  </parent>
  <artifactId>photon-test-bundle</artifactId>
  <packaging>bundle</packaging>

  <name>Photon Third Party Test Dependency Bundle</name>

  <!-- Test time dependencies. Use compile scope for bundle plugin to work. -->
  <dependencies>
    <!-- JUnit is not included since Eclipse needs to use its own plug-in. -->
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-all</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.hamcrest</groupId>
      <artifactId>hamcrest-library</artifactId>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>

      <!-- Don't generate Eclipse metadata. -->
      <plugin>
        <artifactId>maven-eclipse-plugin</artifactId>
        <configuration>
          <skip>true</skip>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <!-- We do not use an OSGi Bundle Repository. -->
          <obrRepository>NONE</obrRepository>
          <instructions>
            <!-- Add additional properties not generated by the plugin. -->
            <Bundle-SymbolicName>org.marketcetera.test.thirdparty</Bundle-SymbolicName>
            <Bundle-Vendor>Marketcetera, Inc.</Bundle-Vendor>
            <!-- Include all the dependent jars except marketcetera ones which should have their own plugins. -->
            <Embed-Dependency>*</Embed-Dependency>
            <Embed-Transitive>true</Embed-Transitive>
            <!-- Only the jars should be on the classpath. -->
            <Bundle-ClassPath>{maven-dependencies}</Bundle-ClassPath>
            <!-- Export all packages provided by the bundled jars. -->
            <_exportcontents>*</_exportcontents>
            <_nouses>true</_nouses>
            <!-- Import (require) nothing.  Trust Maven's dependency resolution over the default code analysis method. -->
            <Import-Package>!*</Import-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>
</project>
