<!--
  - See '../../README.html' for detailed documentation.
  -->

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">
  <!--
    - See
    - http://www.quickfixj.org/quickfixj/usermanual/usage/configuration.html
    - for a complete list of standard options.
    -->
  <bean id="citifx_qdescriptor" class="org.marketcetera.util.quickfix.SpringSessionDescriptor">
    <property
     name="dictionary">
      <map>
        <entry key="BeginString" value="${citifx.broker.qf.begin.string}"/>
        <!--
          - An acceptable value for this option is
          - 'citifx.DefaultDataDictionary', which will choose the standard
          - QuickFIX/J dictionary for the FIX version deduced from the
          - 'BeginString' option.
          -->
        <entry key="DataDictionary" value="${citifx.broker.qf.data.dictionary}"/>
        <entry key="SenderCompID" value="${citifx.broker.qf.sender.comp.id}"/>
        <entry key="TargetCompID" value="${citifx.broker.qf.target.comp.id}"/>
        <entry key="FileStorePath" value="${citifx.broker.qf.store}"/>
        <entry key="SocketConnectHost" value="${citifx.broker.qf.host}"/>
        <entry key="SocketConnectPort" value="${citifx.broker.qf.port}"/>
      </map>
    </property>
  </bean>
</beans>
