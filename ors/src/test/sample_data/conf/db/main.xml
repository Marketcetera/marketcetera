<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">
  <!--
    - The database connection pool.
    -
    - See 'http://www.mchange.com/projects/c3p0/index.html#
    - configuration_properties' for a complete list of options.
    -->
  <bean id="metc_sql_pool" class="com.mchange.v2.c3p0.ComboPooledDataSource" destroy-method="close">
    <!-- The class of the database JDBC driver. -->
    <property name="driverClass" value="${metc.jdbc.driver}"/>
    <!--
      - The JDBC connection URL; by default, we use MySQL, so the URL can
      - be further customized per 'http://dev.mysql.com/doc/refman/5.1/en/
      - connector-j-reference-configuration-properties.html'.
      -->
    <property name="jdbcUrl" value="${metc.jdbc.url}"/>
    <!-- The credentials used to connect to the database: user name. -->
    <property name="user" value="${metc.jdbc.user}"/>
    <!-- The credentials used to connect to the database: password. -->
    <property name="password" value="${metc.jdbc.password}"/>
    <!-- The size of the JDBC connection pool. -->
    <property name="maxPoolSize" value="${metc.jdbc.pool.size}"/>
    <!-- property name="preferredTestQuery" value="select 1"/--> <!-- use this for mysql, postgres, and others -->
    <property name="preferredTestQuery" value="VALUES 1"/> <!-- use this for derby -->
    <property name="testConnectionOnCheckout" value="true"/>
  </bean>
  <bean id="metc_emf" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
    <property name="dataSource" ref="metc_sql_pool"/>
    <property name="persistenceUnitName" value="ors"/>
  </bean>
  <bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
    <property name="entityManagerFactory" ref="metc_emf" />
  </bean>
</beans>
