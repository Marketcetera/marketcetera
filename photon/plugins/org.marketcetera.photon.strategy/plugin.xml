<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.marketcetera.photon.internal.strategy.ui.StrategyPerspective"
            icon="icons/script_gear.png"
            id="org.marketcetera.photon.StrategyPerspective"
            name="%strategyPerspective.name">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            name="%strategyCategory.name"
            id="org.marketcetera.photon.strategy">
      </category>
      <view
            category="org.marketcetera.photon.strategy"
            class="org.eclipse.ui.navigator.CommonNavigator"
            icon="icons/resource_persp.gif"
            id="org.marketcetera.photon.strategy.ProjectExplorer"
            name="%projectExplorerView.name"
            restorable="true">
      </view>
      <view
            category="org.marketcetera.photon.strategy"
            class="org.marketcetera.photon.internal.strategy.ui.TradeSuggestionsView"
            icon="icons/lightbulb.png"
            id="org.marketcetera.photon.strategy.TradeSuggestionsView"
            name="%tradeSuggestionsView.name"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.viewer">
       <viewerActionBinding
            viewerId="org.marketcetera.photon.strategy.ProjectExplorer">
         <includes>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.actions.EditActions"/>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.actions.RefactorActions"/>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.OpenActions"/>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.NewActions"/>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.ResourceMgmtActions"/>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.UndoRedoActionProvider"/>
             <actionExtension pattern="org.eclipse.ui.navigator.resources.PortingActions"/>
         </includes>
       </viewerActionBinding>
       <viewerContentBinding 
            viewerId="org.marketcetera.photon.strategy.ProjectExplorer">
          <includes>
       	     <contentExtension pattern="org.eclipse.ui.navigator.resourceContent" />		       	      
	         <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.startsWithDot"/>
	         <contentExtension pattern="org.eclipse.ui.navigator.resources.filters.closedProject"/>
             <contentExtension pattern="org.eclipse.ui.navigator.resources.linkHelper"/>
          </includes>
       </viewerContentBinding>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.marketcetera.photon.tradeSuggestion.commands"
            name="%tradeSuggestionCommands.name">
      </category>
      <command
            categoryId="org.marketcetera.photon.tradeSuggestion.commands"
            description="%openSuggestionCommand.description"
            id="org.marketcetera.photon.tradeSuggestion.commands.open"
            name="%openSuggestionCommand.name">
      </command>
      <command
            categoryId="org.marketcetera.photon.tradeSuggestion.commands"
            description="%sendOrders.description"
            id="org.marketcetera.photon.tradeSuggestion.commands.send"
            name="%sendOrders.name">
      </command>
      <command
            categoryId="org.marketcetera.photon.tradeSuggestion.commands"
            description="%tradeSuggestionDelete.description"
            id="org.marketcetera.photon.tradeSuggestion.commands.delete"
            name="%tradeSuggestionDelete.name">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.marketcetera.photon.strategy.ProjectExplorer">
         <command
               commandId="org.marketcetera.photon.strategy.engine.ui.workbench.deploy"
               label="Deploy..."
               mnemonic="D"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="org.marketcetera.photon.strategy.expressions.fileSelected">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.marketcetera.photon.strategy.TradeSuggestionsView">
         <command
               commandId="org.marketcetera.photon.tradeSuggestion.commands.open"
               icon="icons/arrow_up.png"
               style="push"
               tooltip="%openSuggestionCommand.description">
         </command>
         <command
               commandId="org.marketcetera.photon.tradeSuggestion.commands.send"
               icon="icons/server_go.png"
               style="push"
               tooltip="%sendOrders.description">
         </command>
         <command
               commandId="org.marketcetera.photon.tradeSuggestion.commands.delete"
               icon="icons/cancel.png"
               style="push"
               tooltip="%tradeSuggestionDelete.description">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.marketcetera.photon.strategy.TradeSuggestionsView">
         <command
               commandId="org.eclipse.ui.edit.delete"
               icon="icons/cancel.png"
               style="push">
         </command>
          <separator
                name="beforeChooseColumns"
                visible="true">
          </separator>
          <menu
                label="%chooseColumns.label">
             <dynamic
                   class="org.marketcetera.photon.commons.ui.workbench.ChooseColumnsMenu"
                   id="org.marketcetera.photon.chooseColumnsMenu">
             </dynamic>
          </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.marketcetera.photon.internal.strategy.ui.TradeSuggestionDeleteHandler"
            commandId="org.eclipse.ui.edit.delete">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="org.marketcetera.photon.strategy.TradeSuggestionsView">
               </equals>
            </with>
         </activeWhen>
      </handler>
      <handler
            class="org.marketcetera.photon.internal.strategy.ui.OpenSuggestionHandler"
            commandId="org.marketcetera.photon.tradeSuggestion.commands.open">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="org.marketcetera.photon.strategy.TradeSuggestionsView">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <instanceof
                        value="org.marketcetera.photon.internal.strategy.TradeSuggestion">
                  </instanceof>
               </iterate>
            </and>
         </enabledWhen>
      </handler>
      <handler
            class="org.marketcetera.photon.internal.strategy.ui.SendOrdersHandler"
            commandId="org.marketcetera.photon.tradeSuggestion.commands.send">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="org.marketcetera.photon.strategy.TradeSuggestionsView">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="org.marketcetera.photon.internal.strategy.TradeSuggestion">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.marketcetera.photon.internal.strategy.ui.TradeSuggestionDeleteHandler"
            commandId="org.marketcetera.photon.tradeSuggestion.commands.delete">
         <activeWhen>
            <with
                  variable="activePartId">
               <equals
                     value="org.marketcetera.photon.strategy.TradeSuggestionsView">
               </equals>
            </with>
         </activeWhen>
         <enabledWhen>
            <iterate
                  ifEmpty="false">
               <instanceof
                     value="org.marketcetera.photon.internal.strategy.TradeSuggestion">
               </instanceof>
            </iterate>
         </enabledWhen>
      </handler>
      <handler
            class="org.marketcetera.photon.commons.ui.workbench.WorkaroundGuiceExtensionFactory:org.marketcetera.photon.internal.strategy.ui.DeployFileHandler"
            commandId="org.marketcetera.photon.strategy.engine.ui.workbench.deploy">
         <activeWhen>
            <reference
                  definitionId="org.marketcetera.photon.strategy.expressions.fileSelected">
            </reference>
         </activeWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.marketcetera.photon.strategy.expressions.fileSelected">
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <adapt
                        type="org.eclipse.core.resources.IFile">
                  </adapt>
               </iterate>
            </and>
      </definition>
      <definition
            id="org.marketcetera.photon.strategy.expressions.containerSelected">
         <or>
            <adapt
                  type="org.eclipse.core.resources.IFile">
            </adapt>
            <adapt
                  type="org.eclipse.core.resources.IFolder">
            </adapt>
            <adapt
                  type="org.eclipse.core.resources.IProject">
            </adapt>
         </or>
      </definition>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <category
            id="org.marketcetera.photon.strategy"
            name="%strategyWizards.name">
      </category>
      <wizard
            category="org.marketcetera.photon.strategy"
            class="org.marketcetera.photon.internal.strategy.ui.NewRubyStrategyWizard"
            icon="icons/new_ruby_strategy.gif"
            id="org.marketcetera.photon.strategy.ruby.NewRubyStrategyWizard"
            name="%newRubyStrategyWizard.name">
      </wizard>
      <wizard
            category="org.marketcetera.photon.strategy"
            class="org.marketcetera.photon.internal.strategy.ui.NewJavaStrategyWizard"
            icon="icons/new_java_strategy.gif"
            id="org.marketcetera.photon.strategy.java.NewJavaStrategyWizard"
            name="%newJavaStrategyWizard.name">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <commonWizard
            associatedExtensionId="org.eclipse.ui.navigator.resourceContent"
            type="new"
            wizardId="org.marketcetera.photon.strategy.ruby.NewRubyStrategyWizard">
         <enablement>
            <reference
                  definitionId="org.marketcetera.photon.strategy.expressions.containerSelected">
            </reference></enablement>
      </commonWizard>
      <commonWizard
            associatedExtensionId="org.eclipse.ui.navigator.resourceContent"
            type="new"
            wizardId="org.marketcetera.photon.strategy.java.NewJavaStrategyWizard">
         <enablement>
            <reference
                  definitionId="org.marketcetera.photon.strategy.expressions.containerSelected">
            </reference></enablement>
      </commonWizard>
   </extension>
   <extension
         point="org.ops4j.peaberry.eclipse.modules">
         <module class="org.marketcetera.photon.internal.strategy.Module"/>
   </extension>
   <extension
         point="org.eclipse.ltk.core.refactoring.deleteParticipants">
      <deleteParticipant
            class="org.marketcetera.photon.commons.ui.workbench.WorkaroundGuiceExtensionFactory:org.marketcetera.photon.internal.strategy.ui.UndeployDeleteParticipant"
            id="org.marketcetera.photon.strategy.undeployDeleteParticipant"
            name="Undeploy Associated Strategies">
         <enablement>
            <with
                  variable="element">
               <instanceof
                     value="org.eclipse.core.resources.IResource">
               </instanceof>
            </with></enablement>
      </deleteParticipant>
   </extension>

</plugin>
