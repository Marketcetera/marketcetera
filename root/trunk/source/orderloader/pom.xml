<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <groupId>org.marketcetera</groupId>
    <artifactId>marketcetera-platform</artifactId>
      <version>0.4.3-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>${parent.groupId}</groupId>
  <artifactId>marketcetera-orderloader</artifactId>
  <packaging>jar</packaging>
  <name>Order Loader</name>
    <description>Loads batches of orders directly into the OMS</description>
    <url>http://trac.marketcetera.org</url>
  <dependencies>
    <dependency>
        <groupId>${project.groupId}</groupId>
      <artifactId>marketcetera-core</artifactId>
    </dependency>
      <!-- dependency on core test code -->
      <dependency>
          <groupId>${project.groupId}</groupId>
          <artifactId>marketcetera-core</artifactId>
          <type>test-jar</type>
          <scope>test</scope>
      </dependency>
  </dependencies>
    <build>
        <plugins>
            <plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
					<configuration>
						<mainClass>org.marketcetera.orderloader.OrderLoader</mainClass>
                        <arguments>
                            <argument>src/test/resources/smallMarket.csv</argument>
                            <argument>orderloader.xml</argument>
                        </arguments>
					</configuration>
            </plugin>
        </plugins>
    </build>
    <pluginRepositories>
       <pluginRepository>
           <id>maven-snapshots</id>
           <url>http://snapshots.repository.codehaus.org</url>
       </pluginRepository>
    </pluginRepositories>
</project>
