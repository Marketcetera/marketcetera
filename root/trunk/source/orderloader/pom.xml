<project
 xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <!--
	- Author: tlerios
	- Id: $Id$
	- $License$
	-->

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.marketcetera</groupId>
    <artifactId>source</artifactId>
    <version>0.4.3-SNAPSHOT</version>
  </parent>
  <artifactId>orderloader</artifactId>
  <packaging>jar</packaging>

  <name>Oeder Loader</name>

  <dependencies>

	<!-- Compile. -->
    <dependency>
      <groupId>${public.package}</groupId>
      <artifactId>core</artifactId>
    </dependency>
    </dependency>

    <!-- Testing. -->
    <dependency>
      <groupId>${public.package}</groupId>
      <artifactId>core</artifactId>
      <type>test-jar</type>
    </dependency>

    <!-- Testing: needs junit 3. -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>[3.8.1]</version>
    </dependency>
  </dependencies>

  <!-- Command-line execution. -->
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <mainClass>org.marketcetera.orderloader.OrderLoader</mainClass>
          <arguments>
            <argument>src/test/resources/smallMarket.csv</argument>
            <argument>orderloader.xml</argument>
          </arguments>
        </configuration>
      </plugin>
    </plugins>
  </build>

</project>


