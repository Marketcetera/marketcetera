<%= render :partial => 'shared/breadcrumbs', 
    :locals=> { :top_level => "P &amp; L", :action_name => "P &amp; L by Account", :top_level_controller => 'pnl' } %>
<h1>P &amp; L for Account: <span><%= @nickname %></span> from <%= @from_date %> to <%= @to_date %></h1>

<table>
    <tr>
        <th>Symbol</th>
        <th>Account</th>
        <th>P&amp;L</th>
    </tr>
<% i=0
   total = BigDecimal.new("O")
 for cf in @cashflows %>
  <tr <%= ((i+=1)%2)==1 ? 'class="odd"':''%> >
    <td><%= link_to h(cf.symbol), {:action => :trade_search, :controller => 'queries', :m_symbol_root => cf.symbol,
                                   :nickname => cf.account, :all_dates => "yes"} %></td>    
    <td><%=h cf.account.to_s %></td>
    <td <%= pnl_number_class(cf.cashflow) %>><%= fn(cf.cashflow, 2) %></td>
    <% total += BigDecimal(cf.cashflow.to_s) %>
  </tr>
<% end %>
  <tr>
      <td colspan="3" class="total">Subtotal: <span <%= pnl_number_class(total) %>><%= fn(total,2) %></span></td>
  </tr>
</table>

<%= button_to 'Calculate again', {:action => :index}, {:class => "submit floatright"} %>

<%= pagination_links(@cashflow_pages, :params => {:nickname => @nickname, :from_date => @from_date, :to_date => @to_date }) %>
