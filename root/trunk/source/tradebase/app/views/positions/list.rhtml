<h2>Listing positions as of open on <%= @date %></h2>

<table>
  <tr>
    <th>Position</th>
    <th>Symbol</th>
    <th>Account</th>
  </tr>

<% 
i=0
for position in @positions %>
  <tr <%= ((i+=1)%2)==1?'class="odd"':''%> >
    <td><%=h position.send(:position) %></td>
    <td><%=h position.tradeable.m_symbol.root %></td>
    <td><%=h position.account.nickname %></td>
  </tr>
<% end %>
</table>

<%= pagination_links(@position_pages, :params => { :as_of_date => @date }) %><br />