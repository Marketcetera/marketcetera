<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd ">
    <!--
     This file sets up the beans for Object to Relational Mapping
    -->
    <bean id="emf" class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean"
          depends-on="jpaVendor">
        <property name="dataSource" ref="${mvn.persist.datasource}"/>
        <property name="persistenceUnitName" value="ors"/>
    </bean>
    <bean id="ers" class="org.marketcetera.persist.EntityRemoteServer" scope="singleton">
        <constructor-arg ref="emf"/>
    </bean>

</beans>