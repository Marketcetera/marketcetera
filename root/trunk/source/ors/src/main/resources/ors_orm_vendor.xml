<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

  <bean id="dbVendor" class="${mvn.persist.db.vendor}"
        scope="singleton"/>
    <!--
        Initialize hibernate as JPA Vendor Implementation
        This is kept in a separate file to allow the unit tests
        to initialize the database prior to ORM setup when running unit tests
    -->
    <bean id="jpaVendor" class="org.marketcetera.persist.HibernateVendor"
          scope="singleton" depends-on="dbVendor"/>
</beans>