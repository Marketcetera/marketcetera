<project
 xmlns="http://maven.apache.org/POM/4.0.0"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <groupId>marketcetera</groupId>
  <artifactId>declarations</artifactId>
  <version>0.6.0</version>
  <packaging>pom</packaging>

  <name>Declarations</name>
  <description>Top-Level Declarations</description>

  <properties>
    <public.package>org.marketcetera</public.package>
    <javase.version>6</javase.version>
    <javaee.version>5</javaee.version>
    <xjc.version>2.1.3</xjc.version>
  </properties>

  <dependencyManagement>
    <dependencies>

      <!-- Compile: local modules. -->
      <dependency>
        <groupId>${public.package}</groupId>
        <artifactId>core</artifactId>
        <version>[${project.version}]</version>
      </dependency>
      <dependency>
        <groupId>${public.package}</groupId>
        <artifactId>util</artifactId>
        <version>[${project.version}]</version>
      </dependency>
      <dependency>
        <groupId>${public.package}</groupId>
        <artifactId>market</artifactId>
        <version>[${project.version}]</version>
      </dependency>

      <!-- Compile: QuickFIX/J. -->
      <dependency>
        <groupId>quickfixj</groupId>
        <artifactId>quickfixj-core</artifactId>
        <version>[1.3.1-bd-3]</version>
      </dependency>

      <!-- Compile: other. -->
      <dependency>
        <groupId>org.apache.activemq</groupId>
        <artifactId>activemq-core</artifactId>
        <version>[5.1.0]</version>
        <exclusions>
          <exclusion>
            <groupId>org.apache.activemq</groupId>
            <artifactId>activeio-core</artifactId>
          </exclusion>
        </exclusions>
      </dependency>
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring</artifactId>
        <version>[2.5.2]</version>
      </dependency>
      <dependency>
        <groupId>org.skife.kasparov</groupId>
        <artifactId>csv</artifactId>
        <version>[1.0]</version>
      </dependency>
      <dependency>
        <groupId>net.java.dev.glazedlists</groupId>
        <artifactId>glazedlists_java15</artifactId>
        <version>[1.7.0]</version>
      </dependency>
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-api</artifactId>
        <version>[1.5.0]</version>
      </dependency>
      <dependency>
        <groupId>commons-io</groupId>
        <artifactId>commons-io</artifactId>
        <version>[1.4]</version>
      </dependency>
      <dependency>
        <groupId>commons-cli</groupId>
        <artifactId>commons-cli</artifactId>
        <version>[1.1]</version>
      </dependency>
      <dependency>
        <groupId>commons-lang</groupId>
        <artifactId>commons-lang</artifactId>
        <version>[2.4]</version>
      </dependency>
      <dependency>
        <groupId>commons-collections</groupId>
        <artifactId>commons-collections</artifactId>
        <version>[3.2.1]</version>
      </dependency>
      <dependency>
        <groupId>commons-i18n</groupId>
        <artifactId>commons-i18n</artifactId>
        <version>[20080730]</version>
      </dependency>
      <dependency>
        <groupId>commons-csv</groupId>
        <artifactId>commons-csv</artifactId>
        <version>[20080514]</version>
      </dependency>
      <dependency>
        <groupId>javax.persistence</groupId>
        <artifactId>persistence-api</artifactId>
        <version>[1.0]</version>
      </dependency>

      <!-- Runtime. -->
      <dependency>
        <groupId>org.slf4j</groupId>
        <artifactId>slf4j-log4j12</artifactId>
        <version>[1.5.0]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>log4j</groupId>
        <artifactId>log4j</artifactId>
        <version>[1.2.13]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>commons-pool</groupId>
        <artifactId>commons-pool</artifactId>
        <version>[1.2]</version>
        <!-- Exclude xerces as it pulls in an older buggy version. -->
        <exclusions>
          <exclusion>
            <groupId>xerces</groupId>
            <artifactId>xerces</artifactId>
          </exclusion>
        </exclusions>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.geronimo.specs</groupId>
        <artifactId>geronimo-jta_1.1_spec</artifactId>
        <version>[1.1.1]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.apache.xbean</groupId>
        <artifactId>xbean-spring</artifactId>
        <version>[3.3]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>mysql</groupId>
        <artifactId>mysql-connector-java</artifactId>
        <version>[5.1.5]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.hibernate</groupId>
        <artifactId>hibernate-entitymanager</artifactId>
        <version>[3.3.2.GA]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>org.hibernate</groupId>
        <artifactId>hibernate</artifactId>
        <version>[3.2.6.ga]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>xerces</groupId>
        <artifactId>xercesImpl</artifactId>
        <version>[2.8.0]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>xerces</groupId>
        <artifactId>xerces</artifactId>
        <version>[2.4.0]</version>
        <scope>runtime</scope>
      </dependency>
      <dependency>
        <groupId>c3p0</groupId>
        <artifactId>c3p0</artifactId>
        <version>[0.9.1.1]</version>
        <scope>runtime</scope>
      </dependency>

      <!-- Testing. -->
      <dependency>
        <groupId>${public.package}</groupId>
        <artifactId>core</artifactId>
        <version>[${project.version}]</version>
        <type>test-jar</type>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>${public.package}</groupId>
        <artifactId>util-test</artifactId>
        <version>[${project.version}]</version>
        <scope>test</scope>
      </dependency>
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>[4.4]</version>
        <scope>test</scope>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <profiles>
    <profile>
      <id>safe.compile</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-compiler-plugin</artifactId>
            <configuration>
              <showDeprecation>true</showDeprecation>
              <showWarnings>true</showWarnings>
              <compilerArgument>-Xlint</compilerArgument>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
    <profile>
      <id>i18n.tests</id>
      <build>
        <plugins>
          <plugin>
            <artifactId>maven-surefire-plugin</artifactId>
            <configuration>
              <argLine>-Duser.language=${jvm.locale.language} -Duser.country=${jvm.locale.country} -Duser.variant=${jvm.locale.variant}</argLine>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

  <build>
    <pluginManagement>
      <plugins>

        <!-- Test jar generation. -->
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.2</version>
        </plugin>

        <!-- mvn exec:exec or exec:java -->
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>1.1</version>
        </plugin>

        <!-- mvn test -->
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.4.3</version>
          <configuration>
            <disableXmlReport>true</disableXmlReport>
            <forkMode>always</forkMode>
          </configuration>
        </plugin>

        <!-- mvn compile -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-compiler-plugin</artifactId>
          <configuration>
            <source>1.${javase.version}</source>
            <target>1.${javase.version}</target>
          </configuration>
        </plugin>

        <!-- mvn javadoc:javadoc -->
        <plugin>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>2.4</version>
          <configuration>
            <aggregate>true</aggregate>
            <links>
              <link>http://java.sun.com/javaee/${javaee.version}/docs/api/</link>
              <link>http://java.sun.com/javase/${javase.version}/docs/api/</link>
              <link>http://www.quickfixj.org/quickfixj/javadoc/</link>
              <link>http://static.springframework.org/spring/docs/2.5.2/api/</link>
              <link>http://logging.apache.org/log4j/1.2/apidocs/</link>
              <link>http://commons.apache.org/io/api-release/</link>
              <link>http://commons.apache.org/lang/api-release/</link>
              <link>http://commons.apache.org/collections/api-release/</link>
              <link>http://commons.apache.org/vfs/apidocs/</link>
              <link>http://commons.apache.org/cli/api-release/</link>
            </links>
          </configuration>
        </plugin>

        <!-- mvn assembly:assembly -->
        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <!-- Version 2.2-beta-2 throws NPE under dependency management. -->
          <version>2.1</version>
          <configuration>
            <finalName>${project.artifactId}</finalName>
            <appendAssemblyId>false</appendAssemblyId>
          </configuration>
        </plugin>

        <!--
          -  Explicit dependencies are listed here because maven-jaxb2-plugin
          -  uses jaxb 2.1.5 by default, which is different than the xjc
          -  version included with jdk 1.6 (2.1.3 as of 1.6.0_04).
          -->
        <plugin>
          <groupId>org.jvnet.jaxb2.maven2</groupId>
          <artifactId>maven-jaxb2-plugin</artifactId>
          <version>0.5</version>
          <executions>
            <execution>
              <goals>
                <goal>generate</goal>
              </goals>
            </execution>
          </executions>
          <dependencies>
            <dependency>
              <groupId>com.sun.xml.bind</groupId>
              <artifactId>jaxb-xjc</artifactId>
              <version>${xjc.version}</version>
            </dependency>
            <dependency>
              <groupId>com.sun.xml.bind</groupId>
              <artifactId>jaxb-impl</artifactId>
              <version>${xjc.version}</version>
            </dependency>
          </dependencies>
        </plugin>
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>hibernate3-maven-plugin</artifactId>
          <version>2.1</version>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <repositories>
    <!--
     -  The central repository is included here due to a bug in Maven 2.0.9.
     -  Without this inclusion, Maven finds commons-i18n in the central repo
     -  (versions 0.4 and 0.5) and in the Internal repo (20060814). Since
     -  we need 20060814, Maven downloads the pom from the Internal repo,
     -  but then tries to fetch the jar from the central repo, where it
     -  does not exist. Thus Maven fails to resolve the commons-i18n
     -  artifact. The workaround is to search central ahead of Internal.
     -->
    <repository>
      <id>central</id>
      <url>http://repo1.maven.org/maven2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>codehaus.snapshots</id>
      <url>http://snapshots.repository.codehaus.org/</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>java.net</id>
      <url>http://download.java.net/maven/2</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
    <repository>
      <id>internal</id>
      <url>http://repo.marketcetera.org/maven</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>maven2-repository.dev.java.net</id>
      <url>http://download.java.net/maven/2</url>
    </pluginRepository>
  </pluginRepositories>

  <scm>
    <connection>scm:svn:http://code.marketcetera.org/root/trunk/</connection>
  </scm>
</project>
