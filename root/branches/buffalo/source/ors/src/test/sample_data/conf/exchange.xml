<beans
 xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import
   resource="properties.xml"/>

  <bean
   id="x_settings"
   class="org.marketcetera.util.quickfix.SpringSessionSettings">
    <property
     name="defaults">
      <map>
        <entry
         key="metc.LogFactoryClass"
         value="quickfix.SLF4JLogFactory"/>
        <entry
         key="metc.MessageStoreFactoryClass"
         value="quickfix.FileStoreFactory"/>
        <entry
         key="ConnectionType"
         value="acceptor"/>
        <entry
         key="HeartBtInt"
         value="30"/>
        <entry
         key="StartTime"
         value="00:00:00"/>
        <entry
         key="EndTime"
         value="00:00:00"/>
        <entry
         key="UseDataDictionary"
         value="Y"/>
        <entry
         key="SLF4JLogHeartbeats"
         value="N"/>
      </map>
    </property>
    <property
     name="descriptors">
      <list>
        <bean
         class="org.marketcetera.util.quickfix.SpringSessionDescriptor">
          <property
           name="dictionary">
            <map>
              <entry
               key="BeginString"
               value="${metc.broker1.qf.begin.string}"/>
              <entry
               key="DataDictionary"
               value="${metc.broker1.qf.data.dictionary}"/>
              <entry
               key="SenderCompID"
               value="${metc.broker1.qf.target.comp.id}"/>
              <entry
               key="TargetCompID"
               value="${metc.broker1.qf.sender.comp.id}"/>
              <entry
               key="FileStorePath"
               value="target/unit_tests/exchange1/qf_store"/>
              <entry
               key="SocketConnectHost"
               value="${metc.broker1.qf.host}"/>
              <entry
               key="SocketAcceptPort"
               value="${metc.broker1.qf.port}"/>
            </map>
          </property>	
        </bean>
        <bean
         class="org.marketcetera.util.quickfix.SpringSessionDescriptor">
          <property
           name="dictionary">
            <map>
              <entry
               key="BeginString"
               value="${metc.broker2.qf.begin.string}"/>
              <entry
               key="DataDictionary"
               value="${metc.broker2.qf.data.dictionary}"/>
              <entry
               key="SenderCompID"
               value="${metc.broker2.qf.target.comp.id}"/>
              <entry
               key="TargetCompID"
               value="${metc.broker2.qf.sender.comp.id}"/>
              <entry
               key="FileStorePath"
               value="target/unit_tests/exchange2/qf_store"/>
              <entry
               key="SocketConnectHost"
               value="${metc.broker2.qf.host}"/>
              <entry
               key="SocketAcceptPort"
               value="${metc.broker2.qf.port}"/>
            </map>
          </property>	
        </bean>
      </list>
    </property>
  </bean>
</beans>
