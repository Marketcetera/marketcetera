<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation= "http://www.springframework.org/schema/beans
                            http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
  <!-- import node definitions -->                            
  <import resource="nodes/main.xml"/>
  <!-- build configuration for server -->
  <bean id="serverConfig" class="org.marketcetera.server.config.ServerConfigImpl">
    <constructor-arg name="id" value="MetcServer"/>
    <constructor-arg name="description" value="Provides core Marketcetera services"/>
    <constructor-arg name="nodes">
      <set>
        <ref bean="default_ors"/>
      </set>
    </constructor-arg>
  </bean>
</beans>
