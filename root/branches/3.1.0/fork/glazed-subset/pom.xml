<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>org.marketcetera.fork</groupId>
        <artifactId>fork-parent</artifactId>
        <version>3.1.0-SNAPSHOT</version>
    </parent>

    <groupId>org.marketcetera.fork</groupId>
    <artifactId>glazed-subset</artifactId>
    <version>3.1.0-SNAPSHOT</version>

    <packaging>bundle</packaging>

    <description>Subset of Glazed Lists, providing dependency for PositionEngine</description>

    <properties>
        <project.build.sourceEncoding>iso-8859-1</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <!--<dependency>-->
            <!--<groupId>org.marketcetera</groupId>-->
            <!--<artifactId>util</artifactId>-->
            <!--<version>3.1.0-SNAPSHOT</version>-->
        <!--</dependency>-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
        </dependency>
        <dependency>
            <groupId>org.hamcrest</groupId>
            <artifactId>hamcrest-library</artifactId>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
                        <Export-Package>ca.odell.glazedlists.*,org.marketcetera.fork.glazed</Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
