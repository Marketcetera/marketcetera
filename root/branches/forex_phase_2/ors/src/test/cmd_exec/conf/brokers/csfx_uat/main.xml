<?xml version="1.0" encoding="UTF-8" ?>

<!--
  - Main CS FX UAT broker configuration.
  -
  -->

<!--
  - See '../../README.html' for detailed documentation.
  -->

<beans
 xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <import
   resource="qdescriptor.xml"/>
  <import
   resource="modifiers.xml"/>
  <import
   resource="routes.xml"/>
  <import
   resource="ps_modifiers.xml"/>
  <import
   resource="resp_modifiers.xml"/>

  <bean
   id="csfxuat_broker"
   class="org.marketcetera.ors.brokers.SpringBroker">
    <!-- The broker name (an arbitrary string). -->
    <property
     name="name"
     value="${csfxuat.broker.name}"/>
    <!-- The broker ID (an arbitrary string, but a short one is best). -->
    <property
     name="id"
     value="${csfxuat.broker.id}"/>
    <!-- Indicates if the broker requires a FIX Logout message on disconnect -->
    <property
     name="fixLogoutRequired"
     value="${csfxuat.broker.fixlogoutrequired}"/>
    <!-- The QuickFIX/J session descriptor. -->
    <property
     name="descriptor"
     ref="csfxuat_qdescriptor"/>
    <!-- The message modifiers. -->
    <property
     name="modifiers"
     ref="csfxuat_modifiers"/>
     <!-- The routing filter. -->

    <!-- 
    <property name="routes" ref="csfxuat_routes"/>
     -->

    <!-- The pre-sending message modifiers. -->
    <property 
     name="preSendModifiers"
     ref="csfxuat_ps_modifiers"/>

    <!-- The response message modifiers. -->

    <property
     name="responseModifiers"
     ref="csfxuat_resp_modifiers"/>

  </bean>
</beans>
