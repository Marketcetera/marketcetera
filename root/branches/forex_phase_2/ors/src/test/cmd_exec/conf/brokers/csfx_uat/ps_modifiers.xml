<?xml version="1.0" encoding="UTF-8" ?>

<!--
  - CS FX UAT broker configuration: pre-sending message modifiers.
  -
  -->

<!--
  - See '../../README.html' for detailed documentation.
  -->

<beans
 xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean
   id="csfxuat_ps_modifiers"
   class="org.marketcetera.ors.filters.MessageModifierManager">
    <!-- The message modifiers. -->
    <property
     name="messageModifiers">
      <list>
        <bean
         class="org.marketcetera.ors.filters.DefaultMessageModifier">
          <!-- Modifications to the header fields. -->
          <property
           name="headerFields">
            <map>
            </map>
          </property>
          <!-- Modifications to the body fields. -->
          <property
           name="msgFields">
            <map>
              <!--
                - Set the 'Text' (tag 58) of all application messages
                - to 'Test Text'.
                -->
              <entry
               key="58(app)"
               value="Test Text"/>
            </map>
          </property>
          <!-- Modifications to the trailer fields. -->
          <property
           name="trailerFields">
            <map>
            </map>
          </property>
        </bean>
        <bean class="org.marketcetera.ors.filters.UserInfoMessageModifier">
          <property name="orsToBrokerUserMap">
            <map>
                <entry key="admin" value="spatil"/>
                <entry key="bjones" value="bjones3"/>
                <entry key="sameer" value="spatil"/>                 
            </map>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
