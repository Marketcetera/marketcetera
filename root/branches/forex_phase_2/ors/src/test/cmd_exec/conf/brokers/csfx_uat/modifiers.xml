<?xml version="1.0" encoding="UTF-8" ?>

<!--
  - CS FX UAT broker configuration: message modifiers.
  -
  -->

<!--
  - See '../../README.html' for detailed documentation.
  -->

<beans
 xmlns="http://www.springframework.org/schema/beans"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation=
 "http://www.springframework.org/schema/beans
  http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

  <bean
   id="csfxuat_modifiers"
   class="org.marketcetera.ors.filters.MessageModifierManager">
    <!-- The message modifiers. -->
    <property
     name="messageModifiers">
      <list>
        <bean
         class="org.marketcetera.ors.filters.DefaultMessageModifier">
          <!-- Modifications to the header fields. -->
          <property
           name="headerFields">
            <map>
              <!--
                - Set the 'MessageEncoding' (tag 347) of all
                - messages to 'UTF-8'.
                -->
               <entry key="347(*)" value="UTF-8"/>    
               <entry key="18(*)" value="1"/>
               <entry key="21(*)" value="2"/>
               <entry key="57(*)" value="execsvcs"/>        
                        
            </map>
          </property>
          <!-- Modifications to the body fields. -->
          <property
           name="msgFields">
            <map>
                <entry key="100(D)" value ="FOR"/>            
            </map>
          </property>
          <!-- Modifications to the trailer fields. -->
          <property
           name="trailerFields">
            <map>
            </map>
          </property>
        </bean>
      </list>
    </property>
  </bean>
</beans>
