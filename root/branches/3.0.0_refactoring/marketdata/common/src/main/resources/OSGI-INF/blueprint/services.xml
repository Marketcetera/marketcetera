<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                               http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs
                               http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">
    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
    <jaxrs:server id="metcMarketData" address="/marketdata">
        <jaxrs:serviceBeans>
            <ref component-id="marketDataWebServiceBean"/>
        </jaxrs:serviceBeans>
        <jaxrs:extensionMappings>
            <entry key="json" value="application/json" />
            <entry key="xml" value="application/xml" />
        </jaxrs:extensionMappings>
    </jaxrs:server>
    <bean id="marketDataWebServiceBean" class="org.marketcetera.marketdata.webservices.impl.MarketDataServiceImpl">
    </bean>
    <bean id="marketDataManagerBean" class="org.marketcetera.marketdata.manager.impl.MarketDataManagerImpl"/>
    <service ref="marketDataManagerBean" interface="org.marketcetera.marketdata.manager.MarketDataManager"/>
    <service ref="marketDataManagerBean" interface="org.marketcetera.marketdata.manager.MarketDataProviderRegistry"/>
</blueprint>
