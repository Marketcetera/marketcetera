<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                               http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs
                               http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>
    <bean id="jacksonMapper" class="org.marketcetera.webservices.systemmodel.impl.JacksonObjectMapper"/>
    <bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider">
        <argument ref="jacksonMapper"/>
    </bean>
    <bean id="searchContextProvider" class="org.apache.cxf.jaxrs.ext.search.SearchContextProvider"/>

    <jaxrs:server id="cstsUserService" address="/userservice/v1">
        <jaxrs:serviceBeans>
            <ref component-id="permissionManagerWebServiceBean"/>
            <ref component-id="roleManagerWebServiceBean"/>
            <ref component-id="userManagerWebServiceBean"/>
        </jaxrs:serviceBeans>
        <jaxrs:extensionMappings>
            <entry key="json" value="application/json" />
            <entry key="xml" value="application/xml" />
        </jaxrs:extensionMappings>
        <jaxrs:providers>
            <ref component-id="jsonProvider"/>
            <ref component-id="searchContextProvider"/>
        </jaxrs:providers>
    </jaxrs:server>

    <bean id="permissionManagerWebServiceBean" class="org.marketcetera.webservices.systemmodel.impl.PermissionServiceImpl">
        <property name="permissionDao" ref="permissionDao"/>
        <property name="permissionFactory" ref="permissionFactory"/>
    </bean>
    <bean id="roleManagerWebServiceBean" class="org.marketcetera.webservices.systemmodel.impl.RoleServiceImpl">
        <property name="roleDao" ref="roleDao"/>
        <property name="roleFactory" ref="roleFactory"/>
    </bean>
    <bean id="userManagerWebServiceBean" class="org.marketcetera.webservices.systemmodel.impl.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
        <property name="userFactory" ref="userFactory"/>
    </bean>

    <reference id="permissionDao" interface="org.marketcetera.api.dao.PermissionDao"/>
    <reference id="permissionFactory" interface="org.marketcetera.api.dao.PermissionFactory"/>
    <reference id="roleDao" interface="org.marketcetera.api.dao.RoleDao"/>
    <reference id="roleFactory" interface="org.marketcetera.api.dao.RoleFactory"/>
    <reference id="userDao" interface="org.marketcetera.api.dao.UserDao"/>
    <reference id="userFactory" interface="org.marketcetera.api.dao.UserFactory"/>

</blueprint>