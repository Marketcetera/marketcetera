<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jaxrs="http://cxf.apache.org/blueprint/jaxrs"
           xmlns:cxf="http://cxf.apache.org/blueprint/core"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
                               http://cxf.apache.org/blueprint/jaxrs http://cxf.apache.org/schemas/blueprint/jaxrs
                               http://cxf.apache.org/blueprint/core http://cxf.apache.org/schemas/blueprint/core.xsd">

    <cxf:bus>
        <cxf:features>
            <cxf:logging/>
        </cxf:features>
    </cxf:bus>

    <jaxrs:server id="cstsUserService" address="/userservice/v1">
        <jaxrs:serviceBeans>
            <ref component-id="permissionManagerWebServiceBean"/>
            <ref component-id="groupManagerWebServiceBean"/>
            <ref component-id="userManagerWebServiceBean"/>
        </jaxrs:serviceBeans>
    </jaxrs:server>

    <bean id="permissionManagerWebServiceBean" class="org.marketcetera.webservices.systemmodel.impl.PermissionServiceImpl">
        <property name="permissionManagerService" ref="permissionManagerService"/>
        <property name="permissionFactory" ref="permissionFactory"/>
    </bean>
    <bean id="groupManagerWebServiceBean" class="org.marketcetera.webservices.systemmodel.impl.RoleServiceImpl">
        <property name="groupManagerService" ref="groupManagerService"/>
        <property name="groupFactory" ref="groupFactory"/>
    </bean>
    <bean id="userManagerWebServiceBean" class="org.marketcetera.webservices.systemmodel.impl.UserServiceImpl">
        <property name="userManagerService" ref="userManagerService"/>
        <property name="userFactory" ref="userFactory"/>
    </bean>

    <reference id="permissionManagerService" interface="org.marketcetera.api.security.PermissionManagerService"/>
    <reference id="permissionFactory" interface="org.marketcetera.core.systemmodel.PermissionFactory"/>
    <reference id="groupManagerService" interface="org.marketcetera.api.security.GroupManagerService"/>
    <reference id="groupFactory" interface="org.marketcetera.core.systemmodel.RoleFactory"/>
    <reference id="userManagerService" interface="org.marketcetera.api.security.UserManagerService"/>
    <reference id="userFactory" interface="org.marketcetera.core.systemmodel.UserFactory"/>

</blueprint>