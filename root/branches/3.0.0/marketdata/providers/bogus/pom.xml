<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.marketcetera.marketdata</groupId>
    <artifactId>marketdata-providers</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>
  <groupId>org.marketcetera.marketdata.providers</groupId>
  <artifactId>marketdata-bogus</artifactId>
  <version>3.0.0-SNAPSHOT</version>
  <packaging>bundle</packaging>
  <licenses>
    <license>
      <name>GNU General Public License (GPL)v2</name>
      <url>http://www.fsf.org/licensing/licenses/gpl.txt</url>
    </license>
  </licenses>
  <name>Marketcetera Bogus Marketdata Provider</name>
  <dependencies>
    <!-- compile: local -->
    <dependency>
      <groupId>org.marketcetera.core</groupId>
      <artifactId>core</artifactId>
      <version>3.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>org.marketcetera.marketdata</groupId>
      <artifactId>marketdata-core</artifactId>
      <version>3.0.0-SNAPSHOT</version>
    </dependency>
    <!-- test: local -->
    <dependency>
      <groupId>org.marketcetera.core</groupId>
      <artifactId>core</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.marketcetera</groupId>
      <artifactId>util-test</artifactId>
      <version>3.0.0-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>attach-artifacts</id>
            <phase>package</phase>
            <goals>
              <goal>attach-artifact</goal>
            </goals>
            <configuration>
              <artifacts>
                <artifact>
                  <file>target/classes/feature.xml</file>
                  <type>xml</type>
                  <classifier>features</classifier>
                </artifact>
              </artifacts>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
