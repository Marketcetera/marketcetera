<?xml version="1.0" encoding="UTF-8"?>

<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.marketcetera.dao</groupId>
        <artifactId>dao-parent</artifactId>
        <version>3.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>datasource</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <description>Datasource for persistence</description>

    <packaging>bundle</packaging>

    <properties>
        <aries.blueprint.version>1.0.0-SNAPSHOT</aries.blueprint.version>
        <postgresql.version>8.4-701.jdbc4</postgresql.version>
        <xapool.version>1.5.0</xapool.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.experlog</groupId>
            <artifactId>xapool</artifactId>
            <version>${xapool.version}</version>
        </dependency>
        <dependency>
            <groupId>commons-dbcp</groupId>
            <artifactId>commons-dbcp</artifactId>
            <version>1.4</version>
        </dependency>
        <dependency>
            <groupId>commons-pool</groupId>
            <artifactId>commons-pool</artifactId>
            <version>1.6</version>
        </dependency>
        <dependency>
            <groupId>postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>${postgresql.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.geronimo.specs</groupId>
            <artifactId>geronimo-jta_1.1_spec</artifactId>
            <version>1.1.1</version>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.transaction</groupId>
            <artifactId>org.apache.aries.transaction.manager</artifactId>
            <version>1.0.0</version>
        </dependency>

        <dependency>
            <groupId>org.apache.aries.transaction</groupId>
            <artifactId>org.apache.aries.transaction.blueprint</artifactId>
            <version>${aries.blueprint.version}</version>
        </dependency>

        <dependency>
            <groupId>org.apache.aries.transaction</groupId>
            <artifactId>org.apache.aries.transaction.wrappers</artifactId>
            <version>${aries.blueprint.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.aries.jpa</groupId>
            <artifactId>org.apache.aries.jpa.container.context</artifactId>
            <version>${aries.blueprint.version}</version>
        </dependency>
        <dependency>
            <groupId>org.apache.aries</groupId>
            <artifactId>org.apache.aries.util</artifactId>
            <version>1.0.0</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- This configuration embeds the xapool, commons-dbcp and commons-pool jars, exposing just the packages that are necessary -->
            <!-- for OpenJPA needs.  The DataSource classes are exposed as services and thus do not need to be exported.  oracle.jdbc.xa, -->
            <!-- oracle.jdbc.xa.client and org.enhydra.instantdb.jdbc are removed because they should have been marked as optional in xapool -->
            <!-- jar manifest.  This avoids funky Fragment-Host configurations...  -BT 20120715 -->
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Import-Package>org.postgresql,!oracle.jdbc.xa,!oracle.jdbc.xa.client,!org.enhydra.instantdb.jdbc,*</Import-Package>
                        <Export-Package>org.apache.commons.dbcp,org.apache.commons.pool,org.apache.commons.pool.impl</Export-Package>
                        <Embed-Dependency>xapool,commons-dbcp,commons-pool</Embed-Dependency>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>
