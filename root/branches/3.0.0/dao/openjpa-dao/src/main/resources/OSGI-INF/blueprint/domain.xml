<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:jpa="http://aries.apache.org/xmlns/jpa/v1.0.0"
           xmlns:tx="http://aries.apache.org/xmlns/transactions/v1.1.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">


    <service ref="authorityDaoBean" interface="org.marketcetera.api.dao.AuthorityDao"/>
    <service ref="groupDaoBean" interface="org.marketcetera.api.dao.GroupDao"/>
    <service ref="userDaoBean" interface="org.marketcetera.api.dao.UserDao"/>

    <service ref="authorityFactoryBean" interface="org.marketcetera.core.systemmodel.AuthorityFactory"/>
    <service ref="groupFactoryBean" interface="org.marketcetera.core.systemmodel.GroupFactory"/>
    <service ref="userFactoryBean" interface="org.marketcetera.core.systemmodel.UserFactory"/>

    <bean id="authorityDaoBean" class="org.marketcetera.dao.impl.AuthorityDaoImpl">
        <jpa:context property="entityManager" unitname="marketcetera"/>
        <tx:transaction method="*" value="Required"/>
    </bean>

    <bean id="groupDaoBean" class="org.marketcetera.dao.impl.GroupDaoImpl">
        <jpa:context property="entityManager" unitname="marketcetera"/>
        <tx:transaction method="*" value="Required"/>
    </bean>

    <bean id="userDaoBean" class="org.marketcetera.dao.impl.UserDaoImpl">
        <jpa:context property="entityManager" unitname="marketcetera"/>
        <tx:transaction method="*" value="Required"/>
    </bean>

    <bean id="authorityFactoryBean" class="org.marketcetera.dao.impl.PersistentAuthorityFactory"/>
    <bean id="groupFactoryBean" class="org.marketcetera.dao.impl.PersistentGroupFactory"/>
    <bean id="userFactoryBean" class="org.marketcetera.dao.impl.PersistentUserFactory"/>

    <bean id="startupBean" class="org.marketcetera.dao.impl.StartupBean" init-method="activate">
        <property name="authorityDao" ref="authorityDaoBean"/>
    </bean>

</blueprint>