<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<objects>
    <users>
        <user username="user" password="password" enabled="true" credentialsNonExpired="true" accountNonLocked="true"
            accountNonExpired="true" />
        <user username="admin" password="admin" enabled="true" credentialsNonExpired="true" accountNonLocked="true"
            accountNonExpired="true" />
    </users>
    <permissions>
        <permission name="user ui admin" description="Permission to perform UI administration tasks on users" permission="ui:user">
            <method>
                <permissionAttribute>Create</permissionAttribute>
                <permissionAttribute>Read</permissionAttribute>
                <permissionAttribute>Update</permissionAttribute>
                <permissionAttribute>Delete</permissionAttribute>
            </method>
        </permission>
        <permission name="permission ui admin" description="Permission to perform UI administration tasks on permissions" permission="ui:permission">
            <method>
                <permissionAttribute>Create</permissionAttribute>
                <permissionAttribute>Read</permissionAttribute>
                <permissionAttribute>Update</permissionAttribute>
                <permissionAttribute>Delete</permissionAttribute>
            </method>
        </permission>
        <permission name="role ui admin" description="Permission to perform UI administration tasks on roles" permission="ui:role">
            <method>
                <permissionAttribute>Create</permissionAttribute>
                <permissionAttribute>Read</permissionAttribute>
                <permissionAttribute>Update</permissionAttribute>
                <permissionAttribute>Delete</permissionAttribute>
            </method>
        </permission>
        <permission name="bond data ui admin" description="Permission to perform UI administration tasks on bond data" permission="ui:bonddata">
            <method>
                <permissionAttribute>Create</permissionAttribute>
                <permissionAttribute>Read</permissionAttribute>
                <permissionAttribute>Update</permissionAttribute>
                <permissionAttribute>Delete</permissionAttribute>
            </method>
        </permission>
    </permissions>
    <roles>
        <role name="admin" description="Administation Role" />
        <role name="bond user" description="Bond User Role" />
    </roles>
    <assignations>
        <assignToRole roleName="admin">
            <permissionsToRole>
                <nameRef name="user ui admin" />
                <nameRef name="permission ui admin" />
                <nameRef name="role ui admin" />
            </permissionsToRole>
            <usersToRole>
                <nameRef name="admin" />
            </usersToRole>
        </assignToRole>
        <assignToRole roleName="bond user">
            <permissionsToRole>
                <nameRef name="bond data ui admin" />
            </permissionsToRole>
            <usersToRole>
                <nameRef name="user" />
            </usersToRole>
        </assignToRole>
    </assignations>
</objects>
