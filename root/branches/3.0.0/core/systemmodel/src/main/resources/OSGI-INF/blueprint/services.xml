<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"  >
    <bean id="permissionManagerServiceBean" class="org.marketcetera.core.systemmodel.impl.PermissionManagerServiceImpl">
        <property name="permissionDao" ref="permissionDao"/>
    </bean>
    <bean id="roleManagerServiceBean" class="org.marketcetera.core.systemmodel.impl.RoleManagerServiceImpl">
        <property name="roleDao" ref="roleDao"/>
    </bean>
    <bean id="userManagerServiceBean" class="org.marketcetera.core.systemmodel.impl.UserManagerServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <reference id="permissionDao" interface="org.marketcetera.api.dao.PermissionDao"/>
    <reference id="roleDao" interface="org.marketcetera.api.dao.RoleDao"/>
    <reference id="userDao" interface="org.marketcetera.api.dao.UserDao"/>

    <service id="permissionManagerService" interface="org.marketcetera.api.security.PermissionManagerService" ref="permissionManagerServiceBean"/>
    <service id="roleManagerService" interface="org.marketcetera.api.security.RoleManagerService" ref="roleManagerServiceBean"/>
    <service id="userManagerService" interface="org.marketcetera.api.security.UserManagerService" ref="userManagerServiceBean"/>
</blueprint>
