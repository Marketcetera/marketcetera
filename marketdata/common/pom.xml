<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.marketcetera.marketdata</groupId>
    <artifactId>marketdata-parent</artifactId>
    <version>1-SNAPSHOT</version>
  </parent>
  <groupId>org.marketcetera.marketdata</groupId>
  <artifactId>marketdata-core</artifactId>
  <version>3.0.1</version>
  <packaging>bundle</packaging>
  <licenses>
    <license>
      <name>GNU General Public License (GPL)v2</name>
      <url>http://www.fsf.org/licensing/licenses/gpl.txt</url>
    </license>
  </licenses>
  <name>Marketcetera Marketdata Core</name>
  <dependencies>
    <!-- compile local -->
    <dependency>
      <groupId>org.marketcetera</groupId>
      <artifactId>core</artifactId>
      <version>3.0.1</version>
    </dependency>
    <dependency>
      <groupId>org.marketcetera.fork</groupId>
      <artifactId>commons-i18n</artifactId>
      <version>3.0.1</version>
    </dependency>
    <!-- compile spring -->
    <dependency>
      <groupId>org.springframework</groupId>
      <artifactId>spring-context</artifactId>
    </dependency>
    <!-- compile other -->
    <dependency>
      <groupId>javax.ws.rs</groupId>
      <artifactId>jsr311-api</artifactId>
      <version>1.1.1</version>
    </dependency>
    <!-- runtime other -->
    <dependency>
      <groupId>org.apache.cxf.karaf</groupId>
      <artifactId>apache-cxf</artifactId>
      <version>${mvn.cxf.version}</version>
      <classifier>features</classifier>
      <type>xml</type>
      <scope>runtime</scope>
    </dependency>
    <!-- test local -->
    <dependency>
      <groupId>org.marketcetera</groupId>
      <artifactId>core</artifactId>
      <version>3.0.1</version>
      <type>test-jar</type>
      <scope>test</scope>
    </dependency>
    <!-- test other -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <configuration>
          <instructions>
            <Bundle-SymbolicName>${project.artifactId}</Bundle-SymbolicName>
            <Export-Package>org.marketcetera.marketdata.*</Export-Package>
          </instructions>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>build-helper-maven-plugin</artifactId>
      </plugin>
    </plugins>
  </build>
</project>
