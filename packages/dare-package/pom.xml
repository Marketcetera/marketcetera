<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.marketcetera</groupId>
  <artifactId>dare-package</artifactId>
  <version>4.0.1-SNAPSHOT</version>
  <packaging>jar</packaging>
  <name>DARE Package</name>
  <parent>
    <groupId>org.marketcetera</groupId>
    <artifactId>packages-parent</artifactId>
    <version>4.0.1-SNAPSHOT</version>
  </parent>
  <dependencies>
    <!-- local compile -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>core</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>admin-api</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>admin-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>fix-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>cluster-simple</artifactId>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>trade-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>admin-rpc-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>trade-rpc-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>fix-rpc-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>dataflow-rpc-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>marketdata-rpc-server</artifactId>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>cluster-rpc-server</artifactId>
    </dependency>
    <!-- other compile -->
    <dependency>
      <groupId>io.springfox</groupId>
      <artifactId>springfox-swagger2</artifactId>
    </dependency>
    <dependency>
      <groupId>io.springfox</groupId>
      <artifactId>springfox-swagger-ui</artifactId>
    </dependency>
    <!-- Compile: QuickFIX/J -->
    <dependency>
      <groupId>org.quickfixj</groupId>
      <artifactId>quickfixj-all</artifactId>
    </dependency>
    <!-- local runtime -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>marketdata-exsim</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>dare</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>dataflow-server</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>marketdata-server</artifactId>
      <scope>runtime</scope>
    </dependency>
    <!-- spring runtime -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.springframework</groupId>
          <artifactId>spring-jcl</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-autoconfigure</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-data-jpa</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-jdbc</artifactId>
      <exclusions>
        <exclusion>
          <groupId>org.springframework.boot</groupId>
          <artifactId>spring-boot-starter-logging</artifactId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-mail</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-validation</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-actuator</artifactId>
    </dependency>
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>
    <!-- spring runtime -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-log4j2</artifactId>
      <scope>runtime</scope>
    </dependency>
    <!-- other runtime -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-devtools</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.postgresql</groupId>
      <artifactId>postgresql</artifactId>
      <scope>runtime</scope>
    </dependency>
    <dependency>
      <groupId>org.flywaydb</groupId>
      <artifactId>flyway-core</artifactId>
      <scope>runtime</scope>
    </dependency>
  </dependencies>
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <executions>
          <execution>
            <phase>generate-test-resources</phase>
            <goals>
              <goal>write-project-properties</goal>
            </goals>
            <configuration>
              <outputFile>${project.build.directory}/local.properties</outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-maven-plugin</artifactId>
        <configuration>
          <jvmArguments>
            -Dspring.datasource.url=${metc.jdbc.url}
            -Dspring.datasource.username=${metc.jdbc.user}
            -Dspring.datasource.password=${metc.jdbc.password}
            -Dspring.datasource.driver-class-name=${metc.jdbc.driver}
            -Dspring.config.location=src/test/cmd_exec/conf/application.properties,target/local.properties
            -Dspring.flyway.locations=classpath:db/migration/${metc.flyway.vendor}/
            -Dmetc.instance=1
            -Dserver.port=9000
            -Dmetc.rpc.port=9010
          </jvmArguments>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.flywaydb</groupId>
        <artifactId>flyway-maven-plugin</artifactId>
        <configuration>
          <user>${metc.jdbc.user}</user>
          <password>${metc.jdbc.password}</password>
          <url>${metc.jdbc.url}</url>
          <driver>${metc.jdbc.driver}</driver>
          <locations>
            <location>classpath:db/migration/${metc.flyway.vendor}</location>
          </locations>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>prepare-package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/output</outputDirectory>
              <overWriteReleases>false</overWriteReleases>
              <overWriteSnapshots>false</overWriteSnapshots>
              <overWriteIfNewer>true</overWriteIfNewer>
              <includeScope>runtime</includeScope>
              <excludeScope>test</excludeScope>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <!-- Command-line execution of the MATP -->
    <profile>
      <id>execute</id>
      <build>
        <plugins>
          <plugin>
            <groupId>org.codehaus.mojo</groupId>
            <artifactId>exec-maven-plugin</artifactId>
            <executions>
              <execution>
                <goals><goal>java</goal></goals>
              </execution>
            </executions>
            <configuration>
              <mainClass>org.marketcetera.core.MultiInstanceApplicationContainer</mainClass>
              <systemProperties>
                <systemProperty>
                  <key>org.marketcetera.app</key>
                  <value>org.marketcetera.server.DareApplication</value>
                </systemProperty>
                <systemProperty>
                  <key>org.marketcetera.appDir</key>
                  <value>src/test/cmd_exec</value>
                </systemProperty>
                <systemProperty>
                  <key>org.marketcetera.instanceDir</key>
                  <value>instances</value>
                </systemProperty>
                <systemProperty>
                  <key>hazelcast.jmx</key>
                  <value>true</value>
                </systemProperty>
                <systemProperty>
                  <key>spring.config.location</key>
                  <value>src/test/cmd_exec/conf/application.properties,target/local.properties</value>
                </systemProperty>
                <systemProperty>
                  <key>log.configurationFile</key>
                  <value>src/test/cmd_exec/conf/log4j2.xml</value>
                </systemProperty>
                <systemProperty>
                  <key>Log4jContextSelector</key>
                  <value>org.apache.logging.log4j.core.async.AsyncLoggerContextSelector</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.cluster.tcpip.members</key>
                  <value>127.0.0.1</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.logdir</key>
                  <value>target/logs</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.logname</key>
                  <value>dareout</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.total.instances</key>
                  <value>1</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.start.delay</key>
                  <value>1000</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.spring.datasource.url</key>
                  <value>${metc.jdbc.url}</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.spring.datasource.username</key>
                  <value>${metc.jdbc.user}</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.spring.datasource.password</key>
                  <value>${metc.jdbc.password}</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.spring.datasource.driver-class-name</key>
                  <value>${metc.jdbc.driver}</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.spring.flyway.locations</key>
                  <value>classpath:db/migration/${metc.flyway.vendor}/</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance</key>
                  <value>0</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.Xms384m</key>
                  <value></value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.Xmx4096m</key>
                  <value></value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.XX:+UseParallelGC</key>
                  <value></value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.XX:+AggressiveOpts</key>
                  <value></value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.XX:+UseFastAccessorMethods</key>
                  <value></value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.Xloggc:target/logs/dare_gc.out</key>
                  <value></value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.com.sun.management.jmxremote</key>
                  <value>true</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.com.sun.management.jmxremote.authenticate</key>
                  <value>false</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instance.com.sun.management.jmxremote.ssl</key>
                  <value>false</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instanceport.server.port</key>
                  <value>9000</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.rpc.port</key>
                  <value>9010</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.sa.rpc.port</key>
                  <value>9020</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.sa.ws.port</key>
                  <value>9030</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.cluster.port</key>
                  <value>9040</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.stomp.port</key>
                  <value>9050</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.jms.port</key>
                  <value>9060</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.sa.jms.port</key>
                  <value>9070</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.acceptor.qf.port</key>
                  <value>9080</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.port.metc.jms.jmx.port</key>
                  <value>9090</value>
                </systemProperty>
                <systemProperty>
                  <key>metc.instanceport.com.sun.management.jmxremote.port</key>
                  <value>9100</value>
                </systemProperty>
              </systemProperties>
              <classpathScope>test</classpathScope>
            </configuration>
          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>
</project>
