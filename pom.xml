<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.sonatype.oss</groupId>
    <artifactId>oss-parent</artifactId>
    <version>7</version>
  </parent>

  <groupId>org.marketcetera</groupId>
  <artifactId>public-parent</artifactId>
  <version>3.0.1-SNAPSHOT</version>

  <packaging>pom</packaging>

  <name>Marketcetera Public Sources Parent POM</name>
  <description>The root of Marketcetera public sources.</description>
  <url>http://www.marketcetera.org</url>

  <licenses>
    <license>
      <name>GNU General Public License (GPL)</name>
      <url>http://www.gnu.org/licenses/gpl.html</url>
    </license>
  </licenses>

  <developers>
    <developer>
      <id>team</id>
      <name>Marketcetera Team</name>
      <roles>
        <role>Owner</role>
      </roles>
    </developer>
  </developers>

  <properties>
    <project.groupId>org.marketcetera</project.groupId>
    <mvn.spring.version>3.2.3.RELEASE</mvn.spring.version>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <slf4j.version>1.7.5</slf4j.version>
    <mvn.javase.version>6</mvn.javase.version>
  </properties>

  <dependencyManagement>
    <dependencies>
      <!-- compile: local -->
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>core</artifactId>
        <version>3.0.1-SNAPSHOT</version>
      </dependency>
      <!-- compile: quickfix/j -->
      <dependency>
        <groupId>quickfixj</groupId>
        <artifactId>quickfixj-all</artifactId>
        <version>1.5.3-bd</version>
      </dependency>
      <!-- compile: spring -->
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-context</artifactId>
        <version>${mvn.spring.version}</version>
      </dependency>
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-beans</artifactId>
        <version>${mvn.spring.version}</version>
      </dependency>
      <!-- compile: other -->
      <dependency>
        <groupId>commons-lang</groupId>
        <artifactId>commons-lang</artifactId>
        <version>2.6</version>
      </dependency>
      <dependency>
        <groupId>com.google.code.findbugs</groupId>
        <artifactId>jsr305</artifactId>
        <version>2.0.1</version>
      </dependency>
      <!-- test: local -->
      <dependency>
        <groupId>${project.groupId}</groupId>
        <artifactId>core</artifactId>
        <version>3.0.1-SNAPSHOT</version>
	<type>test-jar</type>
	<scope>test</scope>
      </dependency>
      <!-- test: spring -->
      <dependency>
        <groupId>org.springframework</groupId>
        <artifactId>spring-test</artifactId>
        <version>${mvn.spring.version}</version>
        <scope>test</scope>
      </dependency>
      <!-- test: other -->
      <dependency>
        <groupId>junit</groupId>
        <artifactId>junit</artifactId>
        <version>4.11</version>
        <scope>test</scope>
      </dependency>
      <!-- runtime: spring -->
    </dependencies>
  </dependencyManagement>
  <scm>
    <url>http://crucible.marketcetera.org/browse/3.0.1</url>
    <connection>scm:svn:http://source.marketcetera.org/root/branches/3.0.1</connection>
    <developerConnection>scm:svn:http://source.marketcetera.org/root/branches/3.0.1</developerConnection>
  </scm>

  <modules>
    <module>agent</module>
    <module>core</module>
  </modules>
</project>
