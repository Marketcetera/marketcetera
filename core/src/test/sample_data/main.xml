<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">
    <bean id="service1" class="org.marketcetera.service.MockService"/>
    <bean id="service2" class="org.marketcetera.service.MockService"/>
    <bean id="simpleRoute" class="org.marketcetera.routes.impl.SimpleLocalDataRoute">
        <property name="destination" ref="service2"/>
    </bean>
    <bean id="testDataFlow"/>
    <bean id="dataFlowManager" class="org.marketcetera.flow.impl.LocalDataFlowManager">
        <property name="dataFlows">
            <list>
                <idref bean="testDataFlow"/>
            </list>
        </property>
    </bean>
    <bean id="serviceManager" class="">
        <property name="services">
            <list>
                <idref bean="service1"/>
                <idref bean="service2"/>
            </list>
        </property>
    </bean>
</beans>