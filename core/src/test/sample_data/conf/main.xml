<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
	                       http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">
  <bean id="futureSymbolResolver" class="org.marketcetera.symbolresolver.impl.FutureSymbolResolver"/>
  <bean id="convertibleBondSymbolResolver" class="org.marketcetera.symbolresolver.impl.ConvertibleBondSymbolResolver"/>
  <bean id="osiOptionSymbolResolver" class="org.marketcetera.symbolresolver.impl.OsiOptionSymbolResolver"/>
  <bean id="equitySymbolResolver" class="org.marketcetera.symbolresolver.impl.EquitySymbolResolver"/>
  <bean id="symbolResolverManager" class="org.marketcetera.symbolresolver.impl.SymbolResolverManagerImpl">
    <property name="symbolResolvers">
      <list>
        <ref bean="futureSymbolResolver"/>
        <ref bean="osiOptionSymbolResolver"/>
        <ref bean="equitySymbolResolver"/>
        <ref bean="convertibleBondSymbolResolver"/>
      </list>
    </property>
  </bean>
</beans>
