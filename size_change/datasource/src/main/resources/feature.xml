<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<features xmlns="http://karaf.apache.org/xmlns/features/v1.1.0" name="org.marketcetera.datasource">
    <repository>mvn:org.apache.karaf.features/enterprise/3.0.0-SNAPSHOT/xml/features</repository>
    <feature description="Marketcetera Datasource" version="3.0.0-SNAPSHOT" name="org.marketcetera.datasource">
        <feature>jpa</feature>
        <feature>jndi</feature>
        <feature>transaction</feature>
        <bundle>mvn:org.marketcetera/datasource/${pom.version}</bundle>
        <bundle>wrap:mvn:com.experlog/xapool/1.6-beta</bundle>
        <bundle>mvn:org.apache.geronimo.specs/geronimo-jta_1.1_spec/1.1.1</bundle>
        <bundle>mvn:org.apache.geronimo.specs/geronimo-j2ee-connector_1.5_spec/2.0.0</bundle>
        <bundle>wrap:mvn:aopalliance/aopalliance/1.0</bundle>
        <bundle>wrap:mvn:commons-logging/commons-logging/1.1.1</bundle>
    </feature>

    <feature description="PostgreSQL Data Source" version="3.0.0-SNAPSHOT" name="org.marketcetera.postgresDS">
        <feature version="${pom.version}">org.marketcetera.datasource</feature>
        <bundle>wrap:mvn:postgresql/postgresql/8.4-701.jdbc4</bundle>
        <config name="org.marketcetera.datasource">
            jdbc.driverClassName=org.postgresql.Driver
            jdbc.url=jdbc:postgresql:metc
            jdbc.username=metc
            jdbc.password=pw4metc
        </config>
    </feature>
    <feature description="MySQL Data Source" version="3.0.0-SNAPSHOT" name="org.marketcetera.mysqlDS">
        <feature version="${pom.version}">org.marketcetera.datasource</feature>
        <bundle>wrap:mvn:mysql/mysql-connector-java/5.1.21</bundle>
        <config name="org.marketcetera.datasource">
            jdbc.driverClassName=com.mysql.jdbc.Driver
            jdbc.url=jdbc:mysql://localhost/metc
            jdbc.username=metc
            jdbc.password=pw4metc
        </config>
    </feature>
    <feature description="Derby Data Source" version="3.0.0-SNAPSHOT" name="org.marketcetera.derbyDS">
        <feature version="${pom.version}">org.marketcetera.datasource</feature>
        <bundle>wrap:mvn:org.apache.derby/derby/10.9.1.0</bundle>
        <config name="org.marketcetera.datasource">
            jdbc.driverClassName=org.apache.derby.jdbc.EmbeddedDriver
            jdbc.url=jdbc:derby:db/metc;create=true
            jdbc.username=metc
            jdbc.password=pw4metc
        </config>
    </feature>
    <feature description="Sybase Data Source" version="3.0.0-SNAPSHOT" name="org.marketcetera.sybaseDS">
        <feature version="${pom.version}">org.marketcetera.datasource</feature>
        <bundle>wrap:mvn:com.sybase/jdbc/4</bundle>
        <config name="org.marketcetera.datasource">
            jdbc.driverClassName=com.sybase.jdbc4.jdbc.SybDriver
            jdbc.url=jdbc:sybase:Tds:localhost:4300?ServiceName=metc
            jdbc.username=metc
            jdbc.password=pw4metc
        </config>
    </feature>
</features>
