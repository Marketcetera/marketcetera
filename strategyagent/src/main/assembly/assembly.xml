<assembly>
  <id>assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/sample_data/conf</directory>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/test/sample_data/modules</directory>
      <excludes>
        <exclude>**/*.jar</exclude>
        <exclude>**/*.properties</exclude>
      </excludes>
      <outputDirectory>modules</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/ruby/inputs</directory>
      <outputDirectory>samples/ruby/commands</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/ruby/scripts</directory>
      <outputDirectory>samples/ruby/scripts</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/java/inputs</directory>
      <outputDirectory>samples/java/commands</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/java/scripts</directory>
      <outputDirectory>samples/java/scripts</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/modules/conf</directory>
      <outputDirectory>modules/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/sample_data/src</directory>
      <outputDirectory>src</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <fileMode>0644</fileMode>
      <source>src/test/sample_data/inputs/sampleCommands.txt</source>
      <outputDirectory>samples/commands</outputDirectory>
    </file>
  </files>
</assembly>
