<?xml version="1.0" encoding="UTF-8" ?>
<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3" 
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3
                              http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>strategyengine-package</id>
  <formats>
    <format>zip</format>
  </formats>
  <baseDirectory>.</baseDirectory>
  <fileSets>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>.</outputDirectory>
      <directory>src/main/sample_data/bin</directory>
      <includes>
        <include>setEnv.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>strategyengine/bin</outputDirectory>
      <directory>src/main/sample_data/bin</directory>
      <includes>
        <include>strategyengine.sh</include>
      </includes>
      <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>strategyengine/conf</outputDirectory>
      <directory>src/main/sample_data/conf</directory>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>true</useDefaultExcludes>
      <outputDirectory>strategyengine/logs</outputDirectory>
      <directory>src/main/sample_data/logs</directory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/output</directory>
      <outputDirectory>strategyengine/lib</outputDirectory>
      <includes>
        <include>*</include>
      </includes>
      <excludes>
        <exclude>log4j-1.2.11.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}</directory>
      <outputDirectory>strategyengine/lib</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
      <excludes>
        <exclude>*-tests.jar</exclude>
        <exclude>*-sources.jar</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/test/sample_data/modules</directory>
      <excludes>
        <exclude>**/*.jar</exclude>
        <exclude>**/*.properties</exclude>
      </excludes>
      <outputDirectory>strategyengine/modules</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/ruby/inputs</directory>
      <outputDirectory>strategyengine/samples/ruby/commands</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/ruby/scripts</directory>
      <outputDirectory>strategyengine/samples/ruby/scripts</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/java/inputs</directory>
      <outputDirectory>strategyengine/samples/java/commands</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/samples/java/scripts</directory>
      <outputDirectory>strategyengine/samples/java/scripts</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/modules/conf</directory>
      <outputDirectory>strategyengine/modules/conf</outputDirectory>
    </fileSet>
    <fileSet>
      <fileMode>0644</fileMode>
      <directory>src/main/sample_data/modules/jars</directory>
      <outputDirectory>strategyengine/modules/jars</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/sample_data/src</directory>
      <outputDirectory>strategyengine/src</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <fileMode>0644</fileMode>
      <source>src/test/sample_data/inputs/sampleCommands.txt</source>
      <outputDirectory>strategyengine/samples/commands</outputDirectory>
    </file>
  </files>
</assembly>
