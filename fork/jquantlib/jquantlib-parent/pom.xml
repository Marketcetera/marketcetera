                        </plugin>
                        <plugin>
                            <groupId>net.sf.latextaglet</groupId>
                            <artifactId>latextaglet</artifactId>
                            <version>0.1.1</version>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
            <reporting>
                <plugins>
                    <plugin>
