<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:jpa="http://www.springframework.org/schema/data/jpa"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
                           http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
                           http://www.springframework.org/schema/data/jpa http://www.springframework.org/schema/data/jpa/spring-jpa.xsd
                           http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.2.xsd">
  <import resource="properties.xml"/>
  <import resource="ors/db-create.xml"/>
  <context:component-scan base-package="org.marketcetera,com.marketcetera"/>
  <jpa:repositories base-package="org.marketcetera,com.marketcetera"/>
  <tx:annotation-driven/>
  <bean id="adminUser" class="org.marketcetera.ors.security.SimpleUser">
    <property name="name" value="admin"/>
    <property name="password" value="admin"/>
    <property name="superuser" value="true"/>
  </bean>
  <bean id="userInitializer" class="org.marketcetera.ors.security.SimpleUserInitializer">
    <property name="users">
      <list>
        <ref bean="adminUser"/>
      </list>
    </property>
  </bean>
  <bean id="schemaInitializer" class="org.marketcetera.ors.dao.DatabaseVersionInitializer"/>
</beans>
