  <build>
    <pluginManagement>
      <plugins>
        <!-- jar generation. -->
        <plugin>
          <artifactId>maven-jar-plugin</artifactId>
          <version>2.4</version>
        </plugin>
        <!-- source jar generation -->
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-source-plugin</artifactId>
          <executions>
            <execution>
              <id>attach-sources</id>
              <goals>
                <goal>jar</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-gpg-plugin</artifactId>
          <executions>
            <execution>
              <id>sign-artifacts</id>
              <phase>verify</phase>
              <goals>
                <goal>sign</goal>
              </goals>
            </execution>
          </executions>
        </plugin>
        <!-- war generation. -->
        <plugin>
          <artifactId>maven-war-plugin</artifactId>
          <version>2.1-alpha-1</version>
        </plugin>
        <!-- bundle generation. -->
        <plugin>
          <groupId>org.apache.felix</groupId>
          <artifactId>maven-bundle-plugin</artifactId>
          <version>2.3.5</version>
        </plugin>
        <!-- mvn dependency:* -->
        <plugin>
          <artifactId>maven-dependency-plugin</artifactId>
          <version>2.0</version>
        </plugin>
        <!-- mvn eclipse:* -->
        <plugin>
          <artifactId>maven-eclipse-plugin</artifactId>
          <version>2.9</version>
        </plugin>
        <!-- mvn clean -->
        <plugin>
          <artifactId>maven-clean-plugin</artifactId>
          <version>2.3</version>
        </plugin>
        <!-- mvn antrun:* -->
        <plugin>
          <artifactId>maven-antrun-plugin</artifactId>
          <version>1.3</version>
          <dependencies>
            <dependency>
              <groupId>org.apache.ant</groupId>
              <artifactId>ant-junit</artifactId>
              <!--
                  - Temporariy remove the brackets around the version
                  - because the central repo metadata was missing this
                  - version (http://jira.codehaus.org/browse/MANTRUN-113)
                  - Removing the brackets will cause the JAR to ultimately
                  - come from our internal repo.
              -->
              <version>1.7.1</version>
            </dependency>
          </dependencies>
        </plugin>
        <!-- mvn exec:* -->
        <plugin>
          <groupId>org.codehaus.mojo</groupId>
          <artifactId>exec-maven-plugin</artifactId>
          <version>1.2.1</version>
        </plugin>
        <!-- mvn test -->
        <plugin>
          <artifactId>maven-surefire-plugin</artifactId>
          <version>2.4.3</version>
          <configuration>
            <disableXmlReport>false</disableXmlReport>
            <forkMode>always</forkMode>
            <argLine>${mvn.test.options}</argLine>
          </configuration>
        </plugin>
        <!-- mvn compile -->
        <plugin>
          <artifactId>maven-compiler-plugin</artifactId>
          <version>2.0.2</version>
          <configuration>
            <source>1.${mvn.javase.version}</source>
            <target>1.${mvn.javase.version}</target>
          </configuration>
        </plugin>
        <!-- mvn javadoc:* -->
        <plugin>
          <artifactId>maven-javadoc-plugin</artifactId>
          <version>2.5</version>
        </plugin>
        <!-- mvn assembly:* -->
        <plugin>
          <artifactId>maven-assembly-plugin</artifactId>
          <!-- Version 2.2-beta-2 throws NPE under dependency management. -->
          <version>2.3</version>
          <configuration>
            <finalName>${project.artifactId}</finalName>
            <appendAssemblyId>false</appendAssemblyId>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
    <plugins>
      <!-- source jar generation -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-source-plugin</artifactId>
        <version>2.1.2</version>
