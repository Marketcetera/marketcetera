<assembly>
  <id>assembly</id>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <outputDirectory>lib</outputDirectory>
    </dependencySet>
  </dependencySets>
  <fileSets>
    <fileSet>
      <directory>src/main/resources</directory>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>src/main/sample_data/conf</directory>
      <outputDirectory>conf</outputDirectory>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <!--
        - Assembly 2.1 interprets default mode of 0644 as *decimal*;
        - as a workaround, use 420 decimal which results in 0644 octal.
        -->
      <fileMode>420</fileMode>
      <source>../core/src/main/sample_data/conf/log4j.properties</source>
      <outputDirectory>conf</outputDirectory>
      <filtered>true</filtered>
    </file>
    <file>
      <fileMode>420</fileMode>
      <source>src/test/sample_data/inputs/smallMarket.csv</source>
      <outputDirectory>samples</outputDirectory>
    </file>
    <file>
      <fileMode>420</fileMode>
      <source>src/test/sample_data/inputs/reasonableOrders.csv</source>
      <outputDirectory>samples</outputDirectory>
      <destName>largeMarket.csv</destName>
    </file>
  </files>
</assembly>
